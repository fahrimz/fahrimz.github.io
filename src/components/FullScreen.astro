---
import { SITE_TITLE } from "../consts";
import { motion } from "motion/react";
---

<!doctype html>
<html lang="en">
  <body>
    <motion.a
      client:load
      className="text-xl text-black absolute top-0 left-0 m-8 z-50"
      href="/"
      whileHover={{ scale: 1.2 }}>{SITE_TITLE}</motion.a
    >

    <motion.a
      client:load
      className="text-xl text-black absolute top-0 right-0 m-8 z-50"
      href="/explorations"
      whileHover={{ scale: 1.2 }}>Go back</motion.a
    >

    <slot />
  </body>
</html>
